<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="50"
    tools:ignore="MissingPrefix"
    android:background="@drawable/toolbar">


    <TextView
        fontPath="font/cloud_bold.otf"
        android:textColor="@color/white"
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifty"
        android:paddingStart="@dimen/ten"
        android:paddingEnd="@dimen/ten"
        android:layout_gravity="center"
        android:text="@string/register"
        android:textSize="@dimen/textsize18" />

    <LinearLayout
        android:layout_marginTop="@dimen/five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ten">

        <LinearLayout
            android:layout_marginTop="@dimen/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/ten"
                fontPath="font/cloud_bold.otf"
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleEmail"
                android:textSize="18sp" />

            <EditText
                android:layout_marginTop="@dimen/five"
                android:alpha="0.50"
                android:padding="@dimen/ten"
                android:hint="@string/hintemailText"
                android:textColorHint="@color/white"
                android:background="@drawable/button_bg_rounded_corners9"
                android:id="@+id/imput_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/ten"
                fontPath="font/cloud_bold.otf"
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="@dimen/textsize18" />

            <EditText
                android:layout_marginTop="@dimen/five"
                android:alpha="0.50"
                android:hint="@string/hintUsername"
                android:padding="@dimen/ten"
                android:textColorHint="@color/white"
                android:background="@drawable/button_bg_rounded_corners9"
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/ten"
                fontPath="font/cloud_bold.otf"
                android:id="@+id/passText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="@dimen/textsize18" />

            <EditText
                android:id="@+id/editPass"
                android:layout_marginTop="@dimen/five"
                android:inputType="textPassword"
                android:alpha="0.50"
                android:hint="@string/password"
                android:padding="@dimen/ten"
                android:textColorHint="@color/white"
                android:background="@drawable/button_bg_rounded_corners9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <Button
            android:background="@drawable/button_bg_rounded_corners"
            android:id="@+id/register_btn"
            fontPath="font/cloud_bold.otf"
            android:textSize="@dimen/textsize18"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifty"
            android:text="@string/register" />


    </LinearLayout>




</LinearLayout>